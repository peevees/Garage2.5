@model IEnumerable<Garage2._5.Models.Members>

@{
    ViewBag.Title = "Index";
}
<div class="container tablebackground">
    <h2>Members</h2>




    @using (Html.BeginForm("Search", "Members", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <dl class="dl-horizontal">
                <dt>
                    Search by:
                </dt>
                <dd>
                    <form>
                        <div>
                            @*<label class="radio"><input type="radio" name="filter" value="Reg">Reg</label>
                                <label class="radio"><input type="radio" name="filter" value="Brand">Brand</label>
                                <label class="radio"><input type="radio" name="filter" value="Type">Type</label>*@
                            @Html.RadioButton("filter", "Id") <span>Id</span>
                            @Html.RadioButton("filter", "Name") <span>Name</span>

                        </div>
                    </form>
                </dd>
                <dd>
                    <input type="text" name="Search"> <input type="submit" value="Search" class="btn btn-info" />
                </dd>
                <p>@ViewBag.output</p>
            </dl>
        </div>

    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }






    <p>
        @Html.ActionLink("Add New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Remove", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    </div>